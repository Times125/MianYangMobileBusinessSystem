<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/create_ding"
            layout="@layout/title_action_bar"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="3dp"
                android:text="公告标题"
                android:textColor="@color/color_activity_blue_bg"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/ding_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/edit_style"
                android:gravity="left"
                android:hint="请输入标题"
                android:inputType="textMultiLine"
                android:maxLines="2"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:text="公告内容"
                android:textColor="@color/color_activity_blue_bg"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/ding_content"
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/edit_style"
                android:gravity="left"
                android:hint="请输入公告"
                android:inputType="textMultiLine"
                android:maxLines="8"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="3dp"
                android:text="选择接收群组"
                android:textColor="@color/color_activity_blue_bg"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/choose_team_lv"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:dividerHeight="10px"
                    android:divider="@color/white_smoke"></ListView>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
