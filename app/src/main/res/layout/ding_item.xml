<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ding_ding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ding_item_style"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginRight="3dp"
        android:orientation="horizontal">

        <com.netease.nim.uikit.common.ui.imageview.CircleImageView
            android:id="@+id/ding_headimage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            app:civ_border_color="@color/white_smoke"
            app:civ_border_width="3dp" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/GreyWhite"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ding_info_title"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/ding_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ding_time"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="2dp"
                android:text="来自："
                android:textSize="11sp" />

            <TextView
                android:id="@+id/ding_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/ding_name"
                android:layout_alignBottom="@+id/ding_name"
                android:layout_alignStart="@+id/ding_name"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="57dp"
                android:text="hello"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/ding_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/ding_name"
                android:text="时间："
                android:textSize="11sp" />

            <TextView
                android:id="@+id/ding_time1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/ding_name1"
                android:text="hello"
                android:textSize="11sp" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/GreyWhite"></View>

        <RelativeLayout
            android:id="@+id/ding_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/ding_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignParentStart="true"
                android:layout_marginStart="59dp"
                android:layout_marginTop="5dp"
                android:text="hello"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:text="标题："
                android:textSize="11sp" />

            <TextView
                android:id="@+id/ding_content_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/ding_title_text"
                android:layout_below="@+id/ding_title_text"
                android:layout_marginTop="5dp"
                android:text="hello"
                android:textSize="11sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/ding_content_text"
                android:layout_alignBottom="@+id/ding_content_text"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:text="内容："
                android:textSize="11sp" />


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>